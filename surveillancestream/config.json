{
    "name": "Surveillance strean",
    "version": "0.0.5",
    "slug": "surveillance_stream",
    "description": "Surveillance stream",
    "arch": ["armv7"],
    "startup": "before",
    "boot": "auto",
    "webui": "http://[HOST]:[PORT:3001]",
    "ingress": true,
    "ingress_port": 0,
    "host_network": true,
    "hassio_api": true,
    "hassio_role": "default",
    "map": [
        "share"
    ],
    "schema": {
        "db_url": "str",
        "recording_folder": "str"
    },
    "options": {
        "db_url": "mysql://{username}:{password}@{host}/{database}",
        "recording_folder": "/path/to/recordings"
    },
    "ports": {
        "3001/tcp": null,
        "4000/tcp": null
    },
    "ports_description": {
        "3001/tcp": "Web interface",
        "4000/tcp": "GraphQL server"
    },
    "image": "laurens55/hassio-addon-surveillancestream-{arch}"
  }